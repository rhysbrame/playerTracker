<% layout('layouts/Boilerplate') %>
<div id="map" style="width: 100%; height: 300px"></div>

<h1>All Teams</h1>
<% for(let team of teams) { %>
<div class="card" mb-3>
  <div class="row">
    <div class="col-md-2">
      <img class="img-fluid" src="<%= team.TeamLogoUrl %>" alt="" />
    </div>
    <div class="col-md-4">
      <div class="card-body">
        <h5 class="card-title"><%= team.Name %></h5>
        <h5 class="card-text"><%= team.School %></h5>
        <p class="card-text"><%= team.Conference %></p>
        <% if(team.StadiumData) { %>
        <p class="card-text">Stadium: <%= team.StadiumData.Name %></p>
        <% } %>
        <a href="/teams/<%=team._id%>" class="btn btn-primary"
          >View <%= team.name %></a
        >
      </div>
    </div>
  </div>
</div>
<%}%>

