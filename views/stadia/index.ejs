<% layout('layouts/Boilerplate') %>
<style>
  body {
    --bg-url: url('../pictures/stadiumBg.jpg');
  }
</style>
<div id="map" style="width: 100%; height: 300px"></div>

<h1>All Stadia</h1>
<% for(let stadium of stadia) { %>
<div class="card" mb-3>
  <div class="row">
    <div class="col-md-4">
      <div class="card-body">
        <h5 class="card-title"><%= stadium.Name %></h5>
        <h5 class="card-text"><%= stadium.City %></h5>
        <h5 class="card-text"><%= stadium.State %></h5>
      </div>
    </div>
  </div>
</div>
<%}%>

<script>
  const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
  const GeoData = { features: <%-JSON.stringify(stadia)%> };
</script>

<script src="/js/clusterMap.js"></script>
