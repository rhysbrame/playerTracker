<% layout('layouts/Boilerplate') %>
<link rel="stylesheet" href="/stylesheets/stars.css" />

<h1>Player Details</h1>
<div class="row">
  <div class="col-4">
    <div class="card text-white bg-dark mb-3">
      <img src="<%= team.TeamLogoUrl %>" class="card-img-top" alt="" />
      <div class="card-body">
        <h5 class="card-title">
          <%= player.FirstName %> <%= player.LastName %>
        </h5>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%= team.School %> - <%= team.Name %></li>
        <li class="list-group-item">No: <%= player.Jersey %></li>
        <li class="list-group-item">Position: <%= player.Position %></li>
        <li class="list-group-item">Birth City: <%= player.BirthCity %></li>
        <li class="list-group-item">Birth State: <%= player.BirthState %></li>
      </ul>
    </div>
  </div>
  <div class="col-8">
    <div id="map" style="width: 600px; height: 400px"></div>
    <h2>Reviews</h2>
    <form
      action="/players/<%= player._id %>/reviews"
      method="POST"
      class="mb-3 validated-form"
      novalidate
    >
      <div class="mb-3">
        <fieldset class="starability-basic">
          <input
            type="radio"
            id="no-rate"
            class="input-no-rate"
            name="review[Rating]"
            value="0"
            checked
            aria-label="No rating."
          />
          <input
            type="radio"
            id="first-rate1"
            name="review[Rating]"
            value="1"
          />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input
            type="radio"
            id="first-rate2"
            name="review[Rating]"
            value="2"
          />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input
            type="radio"
            id="first-rate3"
            name="review[Rating]"
            value="3"
          />
          <label for="first-rate3" title="Average">3 stars</label>
          <input
            type="radio"
            id="first-rate4"
            name="review[Rating]"
            value="4"
          />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input
            type="radio"
            id="first-rate5"
            name="review[Rating]"
            value="5"
          />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>
      <div class="form-floating mb-3">
        <textarea
          class="form-control"
          name="review[Body]"
          id="body"
          cols="30"
          style="height: 100px"
          required
        ></textarea>
        <label for="body" class="form-label">Review...</label>
        <div class="valid-feedback">Looks Good!</div>
      </div>
      <button class="btn btn-success">Submit</button>
    </form>
    <% for(let review of player.Reviews) {%>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title"><%= review.Author.username%></h5>
        <p class="starability-result" data-rating="<%=review.Rating%>">
          Rated: <%= review.Rating %> stars
        </p>
        <p class="card-text"><%= review.Body %></p>
        <% if( currentUser && review.Author._id.equals(currentUser._id)){ %>
        <form
          action="/players/<%=player._id%>/reviews/<%=review._id%>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-sm btn-danger">Delete</button>
        </form>
        <% } %>
      </div>
    </div>
    <% } %>
  </div>
</div>

<script>
  const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
  const geometry = '<%- JSON.stringify(geometry)%>';
  const player = '<%- JSON.stringify(player)%>';
  const teamName = '<%- JSON.stringify(teamName)%>';
</script>

<script src="/js/detailsMapPage.js"></script>
