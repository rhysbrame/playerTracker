<% layout('layouts/Boilerplate') %>
<h1>All Players</h1>

<% for(let player of players) { %>
<div class="card" mb-3>
  <div class="row">
    <div class="col-md-2">
      <h1 align="center"><strong><%= player.Team %></strong></h1>
    </div>
    <div class="col-md-4">
      <div class="card-body">
        <h5 class="card-title">
          <%= player.FirstName %> <%= player.LastName %>
        </h5>
        <p class="card-text text-muted"><%= player.Team %></p>
        <a href="/players/<%= player._id %>" class="btn btn-primary"
          >View <%= player.FirstName %> <%= player.LastName %></a
        >
      </div>
    </div>
  </div>
</div>
<%}%>
